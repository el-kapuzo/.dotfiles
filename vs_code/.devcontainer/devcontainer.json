        "ms-python.python",
        "ms-vsliveshare.vsliveshare",
        "Gruntfuggly.todo-tree",
        "njpwerner.autodocstring",
    ],
    "remoteUser": "py-remote",
    "postCreateCommand": "chmod +x /workspace/.devcontainer/install.sh && /workspace/.devcontainer/install.sh"
