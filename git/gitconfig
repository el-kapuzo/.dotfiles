[init]
	defaultBranch = main

[diff]
	tool = nvimdiff

[difftool]
	prompt = false

[difftool "nvimdiff"]
	cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""

[alias]
	dt = difftool

[credential "https://github.com"]
	helper ="!pass show dev/github_api_token"

[credential "delphi"]
	helper ="!pass show network/delhpi"
    
