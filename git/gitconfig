[init]
    defaultBranch = main

[fetch]
    recurseSubmodules = false

[diff]
    tool = nvimdiff

[difftool]
    prompt = false

[difftool "nvimdiff"]
    cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""

[alias]
    aa = add --all
    s = status
    p = push
    f = fetch
    l = pull
    c = commit
    cm = commit -m
    r = restore
    camend = commit --amend --no-edit
    dt = difftool
    root-dir = rev-parse --show-toplevel

[credential "https://github.com"]
    helper ="!pass show dev/github_api_token"

